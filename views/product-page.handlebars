<link rel="stylesheet" href="/productPage.css">
<div class="container button-container">
        <a class="back-btn" href="/shop/merchant-homepage"> <i class="fas fa-chevron-left"></i> Back</a>
</div>

<section id="product-section">
    {{#each product}}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src="{{productPhoto.[0]}}" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                        <img src="{{productPhoto.[1]}}" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    </div>
            </div>
            {{/each}}
            <div class="col-6">
                    {{!-- {{#each merchantInfo}}
                        <div class="flex-box">
                            <div class="flex-child"><img class="shop-profile-pic" src="{{profilePic}}" alt="profile pic"></div>
                            <div class="flex-child"><h3 class="shopname">{{merchantName}}</h3></div>
                        </div>
                    {{/each}} --}}
                    {{#each product}}
                    <h3>{{productName}}</h3>
                    <p>{{productDescription}}</p>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Price:</h6></div>
                        <div class="flex-child product-attributes"><p>${{price}}HKD</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Shipping price:</h6></div>
                        <div class="flex-child product-attributes"><p>${{shippingPrice}}HKD</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Size:</h6></div>
                        <div class="flex-child product-attributes"><p>{{Size}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Stock:</h6></div>
                        <div class="flex-child product-attributes"><p>{{stock}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Category:</h6></div>
                        <div class="flex-child"><p>{{productCategory}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Size:</h6></div>
                        <div class="flex-child"><p>{{productCondition}}</p></div>
                    </div>
                    <div class="button-container">
                    <button class="flex-child product-btn editBtn" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap" data-target="{{id}}">Edit product</button>
                     <button class="flex-child product-btn deleteBtn" data-target="{{id}}">Delete product</button>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</section>
<section>
    {{#each product}}
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Edit product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                <div class="mb-3">
                    <label for="productName" class="col-form-label">Product name:</label>
                    <input type="text" class="form-control" id="product-name" value="{{productName}}">
                </div>
                <div class="mb-3">
                    <label for="message-text" class="col-form-label">Description:</label>
                    <textarea class="form-control" id="message-text">{{productDescription}}</textarea>
                </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Edit product</button>
            </div>
            </div>
        </div>
        </div>
         {{/each}}
</section>
<script src="/axios/shop-script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>