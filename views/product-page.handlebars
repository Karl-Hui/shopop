<link rel="stylesheet" href="/productPage.css">
<div class="container button-container">
        <a class="back-btn" href="/shop/merchant-homepage"> <i class="fas fa-chevron-left"></i> Back</a>
</div>

<section id="product-section">
    {{#each product}}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src="{{productPhoto.[0]}}" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                        <img src="{{productPhoto.[1]}}" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    </div>
            </div>
            {{/each}}
            <div class="col-6">
                    {{!-- {{#each merchantInfo}}
                        <div class="flex-box">
                            <div class="flex-child"><img class="shop-profile-pic" src="{{profilePic}}" alt="profile pic"></div>
                            <div class="flex-child"><h3 class="shopname">{{merchantName}}</h3></div>
                        </div>
                    {{/each}} --}}
                    {{#each product}}
                    <h3>{{productName}}</h3>
                    <p>{{productDescription}}</p>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Price:</h6></div>
                        <div class="flex-child product-attributes"><p>${{price}}HKD</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Shipping price:</h6></div>
                        <div class="flex-child product-attributes"><p>${{shippingPrice}}HKD</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Size:</h6></div>
                        <div class="flex-child product-attributes"><p>{{Size}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Stock:</h6></div>
                        <div class="flex-child product-attributes"><p>{{stock}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Category:</h6></div>
                        <div class="flex-child"><p>{{productCategory}}</p></div>
                    </div>
                    <div class="flex-box-product">
                        <div class="flex-child product-attributes"><h6>Size:</h6></div>
                        <div class="flex-child"><p>{{productCondition}}</p></div>
                    </div>
                    <div class="button-container">
                    <button class="flex-child product-btn edit" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit product</button>
                    <button class="flex-child product-btn deleteBtn" data-target="{{id}}">Delete product</button>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</section>
<section>
    {{#each product}}
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Edit product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/shop/api/product/edit/{{id}}" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="productName" class="col-form-label">Product name:</label>
                    <input type="text" class="form-control" id="product-name" name="productName" value="{{productName}}">
                </div>
                <div class="mb-3">
                    <label for="price" class="col-form-label">Price:</label>
                    <input type="text" class="form-control" id="product-name" name="price" value="{{price}}">
                </div>
                <div class="mb-3">
                    <label for="shippingPrice" class="col-form-label">Shipping Price:</label>
                    <input type="text" class="form-control" id="product-name" name="shippingPrice" value="{{shippingPrice}}">
                </div>
                <div class="mb-3">
                    <label for="productDescription" class="col-form-label">Description:</label>
                    <textarea class="form-control" name="productDescription" id="productDescription">{{productDescription}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="form_need">Size *</label> <select id="form_size" name="Size" class="form-control" required="required" data-error="Size" value="{{Size}}">
                        <option value="" selected disabled>--Select Size--</option>
                        <option>One Size</option>
                        <option>XS</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                        <option>XXL</option>
                        <option>4</option>
                        <option>6</option>
                        <option>8</option>
                        <option>10</option>
                        <option>12</option>
                        <option>14</option>
                        <option>16</option>
                        <option>18</option>
                        <option>20</option>
                        <option>22</option>
                        <option>24</option>
                        <option>26</option>
                        <option>28</option>
                        <option>30</option>
                        <option>32</option>
                        <option>32</option>
                        <option>UK 6</option>
                        <option>UK 6.5</option>
                        <option>UK 7</option>
                        <option>UK 8</option>
                        <option>UK 8.5</option>
                        <option>UK 9</option>
                        <option>UK 9.5</option>
                        <option>UK 10</option>
                        <option>UK 10.5</option>
                        <option>UK 11</option>
                        <option>UK 11.5</option>
                        <option>UK 12</option>
                        <option>UK 12.5</option>
                        <option>UK 13</option>
                        <option>UK 14</option>
                        </select>
                </div>
                <div class="mb-3">
                    <label for="form_condition">Category *</label> <select id="form_condition" name="productCategory" class="form-control" required="required" data-error="productCondition">
                        <option selected disabled>--Select Category--</option>
                        <option>Top</option>
                        <option>Bottom</option>
                        <option>Dresses</option>
                        <option>Outerwear</option>
                        <option>Shoes</option>
                        <option>Accessories</option>
                        <option>Others</option>
                        </select>
                </div>
                <div class="mb-3">
                    <label for="form_condition">Stock *</label>
                    <input type="number" name="stock" min="1" max="10" value="{{stock}}">
                </div>
                <div class="mb-3">
                    <label for="form_condition">Condition *</label> <select id="form_condition" name="productCondition" class="form-control" required="required" data-error="productCondition">
                        <option value="" selected disabled>--Select Condition--</option>
                        <option>Used</option>
                        <option>Brand new</option>
                    </select>
                </div>
                <div class="mb-3">
                    <input type="file" name="productPhoto" multiple/>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary editBtn" data-target="{{id}}">Edit product</button>
            </div>
            </form>
            </div>
        </div>
        </div>
         {{/each}}
</section>
<script src="/axios/shop-script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>